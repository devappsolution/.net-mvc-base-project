@using BoilerPlate.App.Extensions
@using System.Web.Optimization

<!DOCTYPE html>

<html data-ng-app="app">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Boilerplate MVC</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/vendor.min.css")" />
    @Styles.Render("~/Styles/app-css")
    <!--[if lte IE 9]>
        <script type="text/javascript" src="@Url.Content("~/Scripts/html5shiv.min.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/respond.min.js")"></script>
    <![endif]-->
</head>
<body data-ng-controller="AppController as app">
    <nav class="navbar navbar-default navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="javascript:;">
                    BoilerPlate
                </a>
            </div>
        </div>
    </nav>
    
    <div class="ng-cloak container">
        @RenderBody()
    </div>

    <script type="text/javascript" src="@Url.Content("~/Scripts/vendor.min.js")"></script>
    @Scripts.Render("~/Scripts/app-js")
</body>
</html>
